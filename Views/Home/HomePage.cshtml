@model IEnumerable<dynamic> // เปลี่ยนเป็น dynamic
<style>
     .button-container {
            display: flex;
            justify-content: center;
            padding: 15px;
        }
    }
</style>
<div class="container1">

    @foreach (var post in Model)
    {
            <div class="card">
            <div class="card-bg">
                <div class="image-container">
                    <img src="/Picture/@(post.GameName).jpg" alt="@post.GameName">
                </div>
                <div class="card-content">
                        <h2>@post.GameName</h2>
                    <ul>
                        <li>เจ้าของ Post: @post.Username</li>
                        <li>จำนวนสมาชิก: @post.JoinedNumber/@post.Number</li>
                        <li>สถานที่: @post.Place</li>
                        <li>วันที่: @post.Date</li>
                        <li>เวลา: @post.Time</li>
                    </ul>
                </div>
            </div>
                <form asp-controller="Home" asp-action="Join" method="POST">
                    <input type="hidden" name="PostId" value="@post.PostId" />
                    <div class="button-container">
                        <button class="btn view-btn" onclick="disable-btn(this)">JOIN</button>
                    </div>
                </form>
        </div>
    }
</div>
