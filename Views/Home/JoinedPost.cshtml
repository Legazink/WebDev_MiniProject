@model IEnumerable<dynamic> // เปลี่ยนเป็น dynamic

<style>
     .button-container {
            display: flex;
            justify-content: space-around;
            padding: 15px;
        }
    #joined_button{
            color: #FFFFFF;
        }

    @@media only screen and (max-width: 1024px) {
        .button-container {
            justify-content: space-around;
            align-self: center;
            width: -webkit-fill-available;
        }
    }
</style>


<div class="container1">
        @foreach (var join in Model)
        {
            <div class="card" id="card-@join.Post.PostId">
                <div class="card-bg">
                <div class="image-container">
                    <img src="/Picture/@(join.Post.GameName).jpg" alt="@join.Post.GameName">
                </div>
                <div class="card-content">
                    <h2>@join.Post.GameName</h2>
                    <ul>
                        <li>เจ้าของ Post: @join.Post.Account.UserName</li>
                        <li>จำนวนสมาชิก: @join.Post.JoinedNumber/@join.Post.Number</li>
                        <li>สถานที่: @join.Post.Place</li>
                        <li>วันที่: @join.Post.Date</li>
                        <li>เวลา: @join.Post.Time</li>
                    </ul>
                </div>
                </div>
                <div class="button-container">
                    <form asp-controller="Home" asp-action="CancelJoin" method="post">
                        <input type="hidden" name="PostId" value="@join.Post.PostId"/>
                        <button id ="cancle-button-@join.Post.PostId" class="btn view-btn">CANCLE</button>
                    </form>
                    <button class="btn view-btn" id="view-member-@join.Post.PostId" data-post-id="@join.Post.PostId" data-id="view">VIEW MEMBER</button>
                </div>
            </div>
        }
</div>
 @section displayboard {
     <div class="display-member"></div>
 }
 <script src="~/js/ViewMember.js" asp-append-version="true"></script>
