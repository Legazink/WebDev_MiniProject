@model IEnumerable<dynamic> 

<style>
    #posted_button{
            color: #FFFFFF;
        }
    @@media only screen and (max-width: 1024px) {
        .button-container {
            justify-content: space-around;
            align-self: center;
            width: -webkit-fill-available;
    }
        }
</style>

<div class="container1">
     @foreach (var post in Model)
    {
            <div class="card">
                    
            <div class="card-bg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="delete-btn" viewBox="0 0 16 16">
                                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                      <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                        </svg>
                <div class="image-container">
                    <img src="/Picture/@(post.GameName).jpg" alt="@post.GameName">
                </div>
                <div class="card-content">
                        <h2>@post.GameName</h2>
                    <ul>
                        <li>เจ้าของ Post: @post.Username</li>
                        <li>จำนวนสมาชิก: @post.JoinedNumber/@post.Number</li>
                        <li>สถานที่: @post.Place</li>
                        <li>วันที่: @post.Date</li>
                        <li>เวลา: @post.Time</li>
                    </ul>
                </div>
            </div>
            <div class="button-container">
                 <button class="btn view-btn">CLOSE</button>
                    <button class="btn view-btn" id="view-member-@post.PostId" data-post-id="@post.PostId"  data-id="view">VIEW MEMBER</button>
            </div>
        </div>
    }
</div>

@section displayboard{
    <div class="display-member"></div>
}

<script src="~/js/ViewMember.js" asp-append-version="true"></script>