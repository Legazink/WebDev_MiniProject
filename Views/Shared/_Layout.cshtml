<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RuamtyBG - @ViewData["Page"]</title>
    <style>
        body {
            margin: 0;
            background-color: gray;
        }

        .container {
            display: grid;
            grid-template-rows: 1fr 1fr 1fr;
            grid-template-columns: 1fr 1fr 1fr 1fr;
        }

        .sidebar {
            grid-area: 1 / 1 / 4 / 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-size: 144px;
            color: white;
            width: 85%;
            height: 100vh;
            background-color: red;
        }

        .display-board {
            grid-area: 1 / 2 / 2 / 5;
            background-color: purple;
            width: 100%;
            height: 100%;
            font-size: 144px;
            color: white;
            text-align: center;
        }

        .posts-board {
            grid-area: 2 / 2 / 4 / 5;
            background-color: orange;
            width: 100%;
            height: 100%;
            font-size: 144px;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">1</div>
        <div class="display-board">2</div>
        <div class="posts-board">@RenderBody()</div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
